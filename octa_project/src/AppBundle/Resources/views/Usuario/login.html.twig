{% extends "AppBundle::base.html.twig" %} 

{% block title %} Login {% endblock %}

{% block content %}
	
	{% if is_granted('ROLE_USER') %}
		<strong>
			<h1>Bienvenido {{app.user.user}}</h1>
			<meta http-equiv="refresh" content="1;URL={{path("app_homepage")}}" />
		</strong>
	{% endif %}

	{% if is_granted('ROLE_ADMIN') %}
		<strong>
			<h1>Bienvenido {{app.user.user}}</h1>
			<meta http-equiv="refresh" content="1;URL={{path("app_homepage")}}" />
		</strong>
	{% endif %}


	<div class="col-lg-4">
		<h2>Identificate</h2>
		<hr/>
		<form action="{{path("login_check")}}" method="post">
				<label>Usuario:</label>
				<input type="user" id="username" name="_username" value="{{ last_username }}" class="form-control" />
				<br/>
				<label>Contrase√±a:</label> 
				<input type="password" id="password" name="_password" class="form-control" />
				<br/>
				<input type="submit" value="Entrar" class="btn btn-success">
				<input type="hidden" name="_target_path" value="/login" />

		</form>
	</div>
	
		
	<div class="clearfix"></div>

	
{% endblock %}